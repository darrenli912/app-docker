FROM tekki/mojolicious:9.42-pg

# 设置环境变量
ENV PERL_CPANM_OPT="--verbose"

# 更新包索引并安装系统依赖（如果需要）
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN cpanm Mojo::JWT \
  && rm -r /root/.cpanm


# 设置工作目录
WORKDIR /usr/src/app


# 暴露端口
EXPOSE 3000

CMD ["/bin/bash", "-c"]
